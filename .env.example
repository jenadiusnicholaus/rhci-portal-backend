# Django Core Settings
SECRET_KEY=your_secret_key_here_generate_new_one
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration (PostgreSQL)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=rhci_portal_db
DB_USER=postgres
DB_PASSWORD=your_database_password
DB_HOST=localhost
DB_PORT=5432

# For SQLite (alternative - uncomment if using SQLite)
# DB_ENGINE=django.db.backends.sqlite3
# DB_NAME=db.sqlite3

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_email_password

# Security Settings (set these in production)
CSRF_COOKIE_SECURE=False
SESSION_COOKIE_SECURE=False
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0

# Static and Media Files
STATIC_URL=/static/
STATIC_ROOT=staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=media

# Time Zone
TIME_ZONE=UTC

# Language
LANGUAGE_CODE=en-us

# ============================================================================
# AZAM PAY PAYMENT GATEWAY CONFIGURATION
# ============================================================================

# Environment: 'sandbox' or 'production'
# Sandbox: No timeout (wait forever for response) - slower response times
# Production: Use configured timeout values
AZAM_PAY_ENVIRONMENT=sandbox

# Authentication URL (use production URL in production)
AZAM_PAY_AUTH=https://authenticator-sandbox.azampay.co.tz
# AZAM_PAY_AUTH=https://authenticator.azampay.co.tz  # Production

# Checkout URL (use production URL in production)
AZAM_PAY_CHECKOUT_URL=https://sandbox.azampay.co.tz
# AZAM_PAY_CHECKOUT_URL=https://checkout.azampay.co.tz  # Production

# Application Name registered with AzamPay
AZAM_PAY_APP_NAME=your_app_name

# Client credentials (get from AzamPay dashboard)
AZAM_PAY_CLIENT_ID=your_client_id
AZAM_PAY_CLIENT_SECRET=your_client_secret

# Timeout Configuration (in seconds)
# For Sandbox: Use 'None' for no timeout (recommended)
# For Production: Use numeric values (e.g., 30, 60)
# Connection timeout - time to wait for initial connection
AZAM_PAY_TIMEOUT_CONNECT=None
# Read timeout - time to wait for response after connection
AZAM_PAY_TIMEOUT_READ=None
# Production recommended: AZAM_PAY_TIMEOUT_CONNECT=30, AZAM_PAY_TIMEOUT_READ=60

# Webhook Security (Optional)
# Password that AzamPay sends in callback 'password' field for verification
# Leave empty to disable webhook password verification
AZAM_PAY_WEBHOOK_PASSWORD=

# Exchange Rate (USD to TZS) - update regularly or integrate with rate API
USD_TO_TZS_RATE=2300
