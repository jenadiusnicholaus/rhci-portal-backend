# ============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env and update with your production values

# Django Core Settings
SECRET_KEY=your-new-secret-key-here-generate-a-new-one
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,185.237.253.223

# CORS Settings - Production Frontend URLs ONLY
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Database Configuration (Production MySQL)
DB_ENGINE=django.db.backends.mysql
DB_NAME=rhci_portal_db_production
DB_USER=rhci_portal_prod_user
DB_PASSWORD=your_strong_production_password_here
DB_HOST=localhost
DB_PORT=3306

# Email Configuration (Real SMTP Server)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_real_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_specific_password

# Security Settings (MUST BE TRUE IN PRODUCTION)
CSRF_COOKIE_SECURE=True
SESSION_COOKIE_SECURE=True
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000

# Static and Media Files
STATIC_URL=/static/
STATIC_ROOT=/var/www/rhci-portal/staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=/var/www/rhci-portal/media

# ============================================================================
# AZAMPAY PRODUCTION CONFIGURATION
# ============================================================================

# Production URLs (Remove -sandbox)
AZAM_PAY_AUTH=https://authenticator.azampay.co.tz
AZAM_PAY_CHECKOUT_URL=https://checkout.azampay.co.tz

# App Name (same as registered in AzamPay)
AZAM_PAY_APP_NAME=RHCI-App

# PRODUCTION CREDENTIALS (Get from AzamPay after KYC approval)
AZAM_PAY_CLIENT_ID=your_production_client_id_from_azampay
AZAM_PAY_CLIENT_SECRET=your_production_client_secret_from_azampay

# Production Token (Get from AzamPay)
TOKEN=your_production_token_from_azampay

# Production Vendor ID (Get from AzamPay)
AZAMPAY_VENDOR_ID=your_production_vendor_id

# Environment and Timeouts
AZAM_PAY_ENVIRONMENT=production
AZAM_PAY_TIMEOUT_CONNECT=30
AZAM_PAY_TIMEOUT_READ=60

# Webhook Security (Get from AzamPay support)
AZAM_PAY_WEBHOOK_PASSWORD=your_webhook_password_from_azampay

# Exchange Rate (Update regularly or use API)
USD_TO_TZS_RATE=2300

# Time Zone
TIME_ZONE=Africa/Dar_es_Salaam

# Language
LANGUAGE_CODE=en-us

# ============================================================================
# IMPORTANT PRODUCTION CHECKLIST
# ============================================================================
# [ ] Generate new SECRET_KEY
# [ ] Set DEBUG=False
# [ ] Update ALLOWED_HOSTS with your domain
# [ ] Update CORS_ALLOWED_ORIGINS with HTTPS URLs
# [ ] Get production credentials from AzamPay (after KYC)
# [ ] Update AzamPay URLs to production endpoints
# [ ] Set webhook password from AzamPay
# [ ] Configure production database
# [ ] Set up real email server
# [ ] Enable all security settings (HTTPS, CSRF, etc.)
# [ ] Configure production static/media file paths
# [ ] Set up SSL certificate (Let's Encrypt)
# [ ] Configure callback URL in AzamPay dashboard:
#     https://yourdomain.com/api/v1.0/donors/payment/azampay/callback/
